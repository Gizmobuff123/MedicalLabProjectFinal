package Interfaces;
import java.awt.HeadlessException;
import javax.swing.*;
import Interfaces.UpdateObjction;

public class UpdateObjction extends JFrame
{
	public JButton GoBackToObjction =new JButton();
	public JLabel Objctionid=new JLabel();
	public JLabel Customerid= new JLabel();
	public JLabel Discription=new JLabel();
	
	
	public JTextField Objctionidtext=new JTextField();
	public JTextField Customeridtext=new JTextField();
	public JTextField Discriptiontext=new JTextField();
	
	
	JButton UpdateObjction=new JButton();
	JButton Show=new JButton();
	
	
	public UpdateObjction() throws HeadlessException 
	{
		
		super();
		interface20();
	}
	
public void interface20()
{
	GoBackToObjction.setText("Back");
	GoBackToObjction.setBounds(30,30,70,45);

    Objctionid.setText("Objection id");
    Objctionid.setBounds(50,100,100,55);
    Objctionidtext.setBounds(175,100,100,55);

    Customerid.setText("Customer id");
    Customerid.setBounds(50,200,100,55);
    Customeridtext.setBounds(175,200,100,55);
    
    Discription.setText("Description id");
    Discription.setBounds(50, 300, 100, 55);
    Discriptiontext.setBounds(175,300,100,55);
    
    UpdateObjction.setText("Update");
	UpdateObjction.setBounds(100,400,85,55);
	
	Show.setText("Show");
	Show.setBounds(185,400,75,55);
	this.setSize(800,800);
    
    this.show();
	this.setLayout(null);
	this.add(GoBackToObjction);
	this.add(Objctionid);
	this.add(Customerid);
	this.add(Discription);
	this.add(Objctionidtext);
	this.add(Customeridtext);
	this.add(Discriptiontext);
	this.add(UpdateObjction);
	this.add(Show);

}
	
	public static void main(String[] args) 
	{
		UpdateObjction ui=new UpdateObjction();
	}	

	

}
